div(class="well")
  h1 {{user.username}}
  p {{user.first}} {{user.last}}
h2 Friends

div(class="well col-md-4")
  div(class="row")
    input(ng-model="friendEmail" id="friendEmail" placeholder="Find Friends")
    button(class="btn btn-success" ng-click="addFriend(friendEmail)") + 
  div(class="row")
    p(class="friend-category") Pending Friend Requests
    ul(class="list-group col-md-8 col-md-offset-2" ng-repeat="(key, value) in user.friends | friendsFilter:-2")
      li(class="list-group-item")
        button(class="btn btn-info" ng-click="goToProfile(value.uid)") ^ 
        span {{value.username}}
        button(class="btn btn-success") + 
        button(class="btn btn-danger") - 
  div(class="row")
    p(class="friend-category") Sent Friend Requests
    ul(class="list-group col-md-8 col-md-offset-2" ng-repeat="(key, value) in user.friends | friendsFilter:0")
      li(class="list-group-item")
        button(class="btn btn-info" ng-click="goToProfile(value.uid)") ^ 
        span {{value.username}}
        button(class="btn btn-danger") - 
  div(class="row")
    p(class="friend-category") Friends
    ul(class="list-group col-md-8 col-md-offset-2" ng-repeat="(key, value) in user.friends | friendsFilter:1")
      li(class="list-group-item")
        button(class="btn btn-info" ng-click="goToProfile(value.uid)") ^ 
        span {{value.username}}
  div(class="row")
    p(class="friend-category") Collaborators
    ul(class="list-group col-md-8 col-md-offset-2" ng-repeat="(key, value) in user.friends | friendsFilter:2")
      li(class="list-group-item")
        button(class="btn btn-info" ng-click="goToProfile(value.uid)") ^ 
        span {{value.username}}
div(class="well col-md-8")  
  h1(class="text-center") Feed
  ul(class="list-group col-md-10 col-md-offset-1" ng-repeat="(key, value) in user.posts")
    li(class="list-group-item") {{value.body}}
  input(ng-model="newPost" id="newPost" placeholder="What are you thinking?")
  button(class="btn btn-success" ng-click="post(newPost)") + 
